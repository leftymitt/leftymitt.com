---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
	<channel>
		<title>{{ site.title | xml_escape }}</title>
		<description>
			{% if site.description %}{{ site.description | xml_escape }}
			{% endif %}
		</description>		
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />

		{% capture get_pages %}
		{% for thing in site.collections %}
		{% assign docs=thing[1].docs %}
			{% if docs %}
			{% for doc in docs %}
				{% if doc %}
					||||| {{ doc.added_date }}
					{% if doc.link %} ||| {{ doc.link }}
					{% else %} ||| {{ site.url}}{{ doc.url }}
					{% endif %}
					||| {{ doc.content | strip_html | truncate: 1000 }}
					||| {{ doc.title }} 
					||| {{ doc.author }} 
				{% endif %}
			{% endfor %}
			{% endif %}
		{% endfor %}
		{% endcapture %}

		{% assign all_pages = get_pages | split:'|||||' | sort | sort | reverse %}
		{% for page_blob in all_pages %}
		{% assign page = page_blob | split: "|||" %}
			<item>
				<title>{{ page[3] | xml_escape }}</title>
				{% if page[4] %}
					<dc:creator>{{ page[4] | xml_escape }}</dc:creator>
				{% endif %}        
				<description>{{ page[2] | xml_escape }}</description>
				<pubDate>{{ page[0] | date_to_rfc822 }}</pubDate>
				<link>{{ page[1] }}</link>
				<guid isPermaLink="true">{{ page[1] }}</guid>
			</item>
		{% endfor %}

	</channel>
</rss>
